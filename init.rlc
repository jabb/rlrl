
# Basic keybinds
map ? commands
map Q "quit -p"

# Movement keybinds
map h "move left"
map j "move down"
map k "move up"
map l "move right"

map . update
map r "rand range 1 6"

# This will map actions. "act 0" is always move.
map 0 [runcmds [echo "Switching to action 0!"] [map -f h "act 0 left"] [map -f j "act 0 down"] [map -f k "act 0 up"] [map -f l "act 0 right"]]
