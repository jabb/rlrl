
# Basic keybinds
map ? commands
map Q "quit -p"

# Movement keybinds
map h "move left"
map j "move down"
map k "move up"
map l "move right"

# This will map actions.
map 0 [runcmds [echo "Switching to action 0!"] [unmap h] [unmap j] [unmap k] [unmap l] [map h "act 0 left"] [map j "act 0 down"] [map k "act 0 up"] [map l "act 0 right"]]
